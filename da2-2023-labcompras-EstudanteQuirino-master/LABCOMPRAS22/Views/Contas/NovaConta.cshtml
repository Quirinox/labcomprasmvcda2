@{
    ViewBag.TituloPagina = "NovaConta";
}
@model Conta
<form  asp-action="NovaConta" method="post" class="w-50">
    <div asp-validation-summary="All"></div>
    <div class="mb-3">
    <label asp-for="NomeTitular" class="form-label">Nome Titular</label>
    <input asp-for="NomeTitular"  type="text" class="form-control" />
    </div>
    <div class="mb-3">
    <label asp-for="Saldo" >Saldo</label>
    <input asp-for="Saldo"  value="0" class="form-control" />
    </div>


    <div >

    <label asp-for="ativa" >Ativa</label>
    <select asp-for="ativa" >
    
            <option value="True" class="form-select" selected>Sim</option>
            <option value="False" class="form-select" >Não</option>
    </select>

    </div>
   <input type="submit" value="Criar Conta"/>

</form>